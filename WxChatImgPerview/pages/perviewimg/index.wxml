<view class="container">
  <view class="page-top">
    1/6
  </view>
  <view class="page-body">
    <scroll-view class="scroll-view_H"  enhanced="{{true}}" scroll-with-animation="{{true}}" paging-enabled="{{true}}"
    scroll-left="{{scrollLeft}}"
        scroll-x="true"  style="width: 100%;height:100%;" 
         bindscroll="bindScroll" binddragstart="bindDragStart" binddragend="bindDragEnd">
        <block wx:for="{{imgs}}" wx:key="index">
          <view  class="scroll-view-item_H" bindtap="bindTap"> 
            <view class="view-content">
              <view style="transform:matrix({{matrix}});">
                <image src="{{item.src}}" mode="scaleToFill" ></image>
              </view>
            </view>
          </view>
        </block>
    </scroll-view>
  </view>
  <view class="page-footer">
  </view>
</view>
