/* pages/perviewimg/index.wxss */
.container{
  width: 100%;
  height: 100vh;
  background-color: black;
  position: absolute;
  top: 0;
  left: 0;
}

.page-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 46rpx;
  color: #ffffff;
  text-align: center;
  line-height: 46rpx;
  z-index: 9999;
  background: rgba(0,0,0,0.5);
  padding: 8rpx 0;
}
.page-body{
  width: 100%;
  height: 100%;
}

.scroll-view_H{
  white-space: nowrap;
  position: relative;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 100%;
  /* overflow: auto; */
  position: relative;
}

.scroll-view_desc {
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgba(0,0,0,0.8);
  min-height: 80Px;
  color: #fff;
  transform: matrix(1,0,0,1,0,0);
  padding: 24rpx;
  box-sizing: border-box;
  white-space: pre-wrap;
  word-break: break-word;
  max-height: 80Px;
  overflow: hidden;
  font-size: 30rpx;
  text-overflow: ellipsis;
}
