/* pages/perviewimg/index.wxss */
.container{
  width: 100%;
  height: 100vh;
  background-color: black;
  position: relative;
}

.page-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 46rpx;
  color: #ffffff;
  text-align: center;
  line-height: 46rpx;
  z-index: 9999;
  background: rgba(0,0,0,0.5);
  padding: 8rpx 0;
}
.page-body{
  width: 100%;
  height: 100%;
}

.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 100%;
  overflow: auto;
}


.view-content{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  /* overflow: auto; */
  position: relative;
}


