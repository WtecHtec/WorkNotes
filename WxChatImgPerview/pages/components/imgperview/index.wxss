/* pages/perviewimg/index.wxss */
.container{
  width: 100%;
  height: 100vh;
  background-color: black;
  position: absolute;
  top: 0;
  left: 0;
}

.page-top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 46rpx;
  color: #ffffff;
  text-align: center;
  line-height: 46rpx;
  z-index: 9999;
  background: rgba(0,0,0,0.5);
  padding: 8rpx 0;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.page-body{
  width: 100%;
  height: 100%;
}

.scroll-view_H{
  white-space: nowrap;
  position: relative;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 100%;
  /* overflow: auto; */
  position: relative;
}

.scroll-view_desc {
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgba(39, 35, 35, 0.8);
  color: #fff;
  padding: 24rpx;
  box-sizing: border-box;
  white-space: normal;
  font-size: 30rpx;
  overflow: hidden;
  /* display: -webkit-box; */
  word-break: break-all;
  overflow: hidden;
  min-height: 184rpx;
  max-height: 184rpx;
  line-height: 50rpx;
  z-index: 999;
}

.desc-more {
  margin: 0 8rpx;
  color: rgba(38, 92, 240,0.8);
}
.view_desc_more {
  max-height: 600rpx;
  transition: max-height 0.5s;
}

.view_desc_down {
  max-height: 184rpx;
  transition: max-height 0.5s;
}
